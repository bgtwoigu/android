<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_white_bg"
    android:minHeight="@dimen/page_card_min_height"
    android:minWidth="@dimen/page_card_min_width"
    android:orientation="vertical"
    android:padding="@dimen/page_card_padding" >

    <ImageView
        android:id="@+id/id_page_icon"
        android:layout_width="@dimen/page_card_avatar_size"
        android:layout_height="@dimen/page_card_avatar_size"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/default_page_icon" />

    <!-- <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/id_page_icon"
        android:layout_marginLeft="16dip"
        android:layout_toRightOf="@id/id_page_icon" > -->

        <TextView
            android:id="@+id/id_page_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/id_page_icon"
            android:layout_alignTop="@id/id_page_icon"
            android:layout_marginTop="@dimen/default_text_margin_top"
            android:layout_marginLeft="16dip"
            android:singleLine="true"
            android:textAppearance="@style/users_circles_name"
            android:textSize="@dimen/page_card_name_text_size" />

        <TextView
            android:id="@+id/id_page_fan_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_page_name"
            android:layout_toRightOf="@id/id_page_icon"
            android:layout_marginTop="@dimen/page_card_gap_between_name_and_circles"
            android:ellipsize="end"
            android:drawableLeft="@drawable/fans_icon"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:layout_marginLeft="16dip"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/page_card_fans_text_size" />

        
    <!-- </RelativeLayout> -->
    
    <TextView
            android:id="@+id/follow_action"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/page_card_action_button_height"
            android:layout_alignParentBottom="true"
            android:minWidth="@dimen/page_card_action_button_min_width"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/default_text_margin_right"
            android:gravity="center"
            android:visibility="gone" />

</RelativeLayout>