<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/list_container"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/title_bar_height"
        android:layout_weight="2"
        android:background="@drawable/navigation_bg"
        android:orientation="vertical" >

        <com.borqs.common.view.LeftMenuListView
            android:id="@+id/left_memu_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:listSelector="@drawable/list_selector_left_menu"
            android:divider="@drawable/navigation_bg_line" 
            android:scrollbars="none"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="@drawable/navigation_bg_line" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:orientation="vertical" />

</LinearLayout>