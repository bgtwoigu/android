        <TextView
            android:id="@+id/base_info_title"
            style="@style/shadow_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/base_info_title"
            android:textColor="@color/text_grey"
            android:textSize="14.0dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/member_limit"
            style="@style/shadow_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_grey"
            android:textSize="14.0sp"
            android:visibility="gone" />

        <View
            android:id="@+id/des_span"
            style="@style/circle_profile_span_view"
            android:layout_below="@id/base_info_title" />

        <TextView
            android:id="@+id/public_circle_des"
            style="@style/shadow_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/des_span"
            android:layout_marginTop="@dimen/small_text_margin_top"
            android:textColor="@color/text_grey"
            android:textSize="14.0dip" />
    </RelativeLayout>

