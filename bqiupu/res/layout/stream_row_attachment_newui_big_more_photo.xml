<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/stream_big_image_dimension_device"
              android:gravity="center"
              android:paddingTop="5dp"
              android:orientation="horizontal">

    <ImageView android:id="@+id/stream_photo_1"
               android:layout_width="0dip"
               android:layout_height="@dimen/stream_big_image_dimension_device"
               android:layout_weight="2"
               android:background="@drawable/stream_photo_bg"
               android:layout_marginRight="@dimen/stream_image_right_margin"
               android:layout_marginTop="@dimen/stream_image_top_margin"
               android:layout_gravity="center_vertical"
               android:scaleType="centerCrop"
               android:layout_alignParentTop="true"/>
    <LinearLayout android:layout_width="0dip"
                  android:layout_height="@dimen/stream_big_image_dimension_device"
                  android:layout_weight="1"
                  android:orientation="vertical">
        <ImageView android:id="@+id/stream_photo_2"
                   android:layout_width="match_parent"
                   android:layout_height="0dip"
                   android:layout_weight="1"
                   android:background="@drawable/stream_photo_bg"
                   android:layout_marginTop="@dimen/stream_image_top_margin"
                   android:visibility="gone"
                   android:layout_gravity="center_vertical"
                   android:scaleType="centerCrop"
                   android:layout_alignParentTop="true"/>
        <ImageView android:id="@+id/stream_photo_3"
                   android:layout_width="match_parent"
                   android:layout_height="0dip"
                   android:layout_weight="1"
                   android:background="@drawable/stream_photo_bg"
                   android:layout_marginTop="@dimen/stream_image_top_margin"
                   android:visibility="gone"
                   android:layout_gravity="center_vertical"
                   android:scaleType="centerCrop"/>
    </LinearLayout>
</LinearLayout>

