<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="40dip"
    android:paddingTop="4dip"
    android:paddingBottom="4dip"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/id_top_category_app"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/top_category_app"
        android:background="?attr/buttonSelectableBackground" />

    <TextView
        android:id="@+id/id_top_category_game"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/top_category_game"
        android:background="?attr/buttonSelectableBackground" />

    <RelativeLayout android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1">
        
        <TextView
        android:id="@+id/id_top_category_more"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/tab_more"
        android:background="?attr/buttonSelectableBackground" />
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/dropdown_ic_arrow_normal_holo_light"/>
        
        
    </RelativeLayout>

    
</LinearLayout>
