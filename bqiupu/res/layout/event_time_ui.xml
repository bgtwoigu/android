<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_starttime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <RelativeLayout
            android:id="@+id/start_date_rl"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/item_left_bg" >

            <TextView
                android:id="@+id/start_date"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/event_start_date"
                android:paddingBottom="@dimen/default_text_padding_bottom"
                android:paddingTop="@dimen/default_text_padding_top" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/start_date"
                android:layout_alignRight="@id/start_date"
                android:paddingRight="@dimen/default_text_margin_right"
                android:src="@drawable/account_spinner_icon" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/start_time_rl"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/item_right_bg" >

            <TextView
                android:id="@+id/start_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/event_start_time"
                android:paddingBottom="@dimen/default_text_padding_bottom"
                android:paddingLeft="@dimen/default_text_padding_left"
                android:paddingRight="@dimen/default_text_padding_left"
                android:paddingTop="@dimen/default_text_padding_top" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/start_time"
                android:layout_alignRight="@id/start_time"
                android:src="@drawable/account_spinner_icon" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_endtime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_text_margin_top"
        android:gravity="center_vertical" >

        <RelativeLayout
            android:id="@+id/end_date_rl"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/item_left_bg" >

            <TextView
                android:id="@+id/end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/event_end_date"
                android:paddingBottom="@dimen/default_text_padding_bottom"
                android:paddingTop="@dimen/default_text_padding_top" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/end_date"
                android:layout_alignRight="@id/end_date"
                android:paddingRight="@dimen/default_text_margin_right"
                android:src="@drawable/account_spinner_icon" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/end_time_rl"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/item_right_bg" >

            <TextView
                android:id="@+id/end_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/event_end_time"
                android:paddingBottom="@dimen/default_text_padding_bottom"
                android:paddingLeft="@dimen/default_text_padding_left"
                android:paddingRight="@dimen/default_text_padding_left"
                android:paddingTop="@dimen/default_text_padding_top" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/end_time"
                android:layout_alignRight="@id/end_time"
                android:src="@drawable/account_spinner_icon" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_text_margin_top" >

        <Spinner
            android:id="@+id/calendars_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_gravity="center_vertical"
            android:background="@drawable/list_background_all"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/default_text_padding_bottom"
            android:paddingTop="@dimen/default_text_padding_top" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/calendars_spinner"
            android:layout_alignRight="@id/calendars_spinner"
            android:paddingBottom="@dimen/default_text_padding_bottom"
            android:paddingRight="@dimen/default_text_margin_right"
            android:src="@drawable/account_spinner_icon" />
    </RelativeLayout>
    
     <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_text_margin_top" >

        <Spinner
            android:id="@+id/calendars__reminder_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_gravity="center_vertical"
            android:background="@drawable/list_background_all"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/default_text_padding_bottom"
            android:paddingTop="@dimen/default_text_padding_top" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/calendars__reminder_spinner"
            android:layout_alignRight="@id/calendars__reminder_spinner"
            android:paddingBottom="@dimen/default_text_padding_bottom"
            android:paddingRight="@dimen/default_text_margin_right"
            android:src="@drawable/account_spinner_icon" />
    </RelativeLayout>

</LinearLayout>