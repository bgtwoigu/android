<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/invite_edit_left_padding"
    android:paddingRight="@dimen/invite_edit_right_padding"
    android:orientation="vertical" >

    <View 
        android:layout_height="1dip"
        android:layout_width="fill_parent"
        android:background="@drawable/divider"/>

    <EditText
        android:id="@+id/invite_comment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_text_margin_top"
        android:autoText="true"
        android:gravity="top"
        android:hint="@string/invite_hint_text"
        android:inputType="textCapSentences|textMultiLine"
        android:minHeight="@dimen/invite_edit_min_height"
        android:maxLines="5"
        android:maxLength="70"
        android:textAppearance="?android:attr/textAppearanceMediumInverse"
        android:textColor="@android:color/black" />

</LinearLayout>
