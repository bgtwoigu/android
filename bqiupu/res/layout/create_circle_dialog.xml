<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/bpc_backgroud" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/new_circle_edt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="20dip"
            android:capitalize="none"
            android:hint="@string/create_circle_hint"
            android:singleLine="true"
            android:textColor="#000000" />
    </LinearLayout>
    
    <CheckBox android:id="@+id/select_public_circle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_public_circle"
        android:visibility="gone" />
    
    <!-- include layout="@layout/create_circle_public_ui" android:id="@+id/create_public_circle_ui"
        android:visibility="gone" / -->

</LinearLayout>