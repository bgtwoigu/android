    <TextView
        android:id="@+id/comment_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dip"
        android:textColor="@color/comment_line_text_bg_color"
        android:paddingLeft="@dimen/small_text_padding_left"
        android:paddingRight="@dimen/small_text_padding_right"
        android:gravity="center" />

    <View
        android:id="@+id/right_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/small_text_padding_right"
        android:background="@drawable/divider"
        android:layout_toRightOf="@id/comment_count"  />

</RelativeLayout>