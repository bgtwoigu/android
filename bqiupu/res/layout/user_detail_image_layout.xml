<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profile_span_left"
    android:layout_width="@dimen/user_detail_pic_height"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/user_detail_pic_left_margin"
    android:layout_marginTop="@dimen/user_detail_pic_top_margin" >

    <ImageView
        android:id="@+id/profile_img_ui"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/user_detail_pic_height"
        android:layout_centerHorizontal="true"
        android:src="@drawable/default_user_icon" />

    <TextView
        android:id="@+id/profile_edit_img"
        android:layout_width="fill_parent"
        android:layout_height="16dp"
        android:layout_alignBottom="@id/profile_img_ui"
        android:layout_centerHorizontal="true"
        android:background="#70000000"
        android:gravity="center"
        android:text="@string/user_detail_edit_image"
        android:textColor="#c6c7c6"
        android:textSize="12dip"
        android:textStyle="bold" />

</RelativeLayout>