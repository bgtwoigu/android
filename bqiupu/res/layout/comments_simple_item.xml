<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        >
    <ImageView android:id="@+id/comment_summary_icon"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/stream_item_padding"
               android:src="@drawable/ic_comment_summary"
            />
    <TextView android:id="@+id/tweet_publish_text"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentTop="true"
              android:layout_toRightOf="@id/comment_summary_icon"
              android:linksClickable="false"
              android:textAppearance="@style/sns_text_small"/>
</RelativeLayout>
