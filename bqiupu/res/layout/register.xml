<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#eff3f7">
    <ScrollView
	    android:id="@+id/register_scroolview"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_marginBottom="46dip">
	    <RelativeLayout   
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">  
	    <TextView 
	        android:id="@+id/username_txv"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="20dip"
	        android:layout_marginRight="20dip"
	        android:layout_marginTop="10dip"
	        android:textAppearance="@style/sns_big_username"
	        android:gravity="left"
	        android:text="@string/username_txt"/>
	    
	    <AutoCompleteTextView
	        android:id="@+id/register_username_edt"
	        android:layout_width="280dip"          
	        android:layout_height="55dip"   
	        android:layout_marginLeft="20dip"
	        android:layout_marginRight="20dip"
	        android:layout_marginTop="10dip"       
	        android:capitalize="none"
	        android:singleLine="true"
	        android:inputType="textEmailAddress"
	        android:layout_below="@id/username_txv"   
	        android:hint="@string/register_username_hint"       
	        android:scrollHorizontally="true"/>
	        
	     <ImageView
	    	android:id="@+id/login_list_mail"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"   
	    	android:layout_alignBottom="@id/register_username_edt"
	    	android:layout_alignRight="@id/register_username_edt"
	    	android:layout_marginRight="5dip"
	    	android:layout_marginBottom="10dip"
	    	android:focusable="true"
	    	android:clickable="true"
	    	android:background="@drawable/login_mail_list"/>
	    	
	    	
	    <TextView 
	        android:id="@+id/nickname_txv"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="20dip"
	        android:layout_marginRight="20dip"
	        android:layout_marginTop="10dip" 
	        android:textAppearance="@style/sns_big_username"
	        android:gravity="left"
	        android:layout_below="@id/register_username_edt"
	        android:text="@string/nickname_txt"/>
	        
	    
	    <EditText
		    android:id="@+id/register_nickname_edt"
		    android:layout_width="280dip"         
		    android:layout_height="55dip" 
		    android:layout_marginLeft="20dip"
		    android:layout_marginRight="20dip"
		    android:layout_marginTop="10dip"               
		    android:capitalize="none"
		    android:singleLine="true"
		    android:hint="@string/register_nickname_hint"       
		    android:layout_below="@id/nickname_txv"
		    android:scrollHorizontally="true"/>
		   
	    	
	    <TextView 
	        android:id="@+id/pwd_txv"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="20dip"
	        android:layout_marginRight="20dip"
	        android:layout_marginTop="10dip" 
	        android:textAppearance="@style/sns_big_username"
	        android:gravity="left"
	        android:layout_below="@id/register_nickname_edt"
	        android:text="@string/password_txt"/>
	        
	        
	    <EditText
		    android:id="@+id/register_pwd_edt"
		    android:layout_width="280dip"         
		    android:layout_height="55dip" 
		    android:layout_marginLeft="20dip"
		    android:layout_marginRight="20dip"
		    android:layout_marginTop="10dip"               
		    android:capitalize="none"
		    android:singleLine="true"
		    android:inputType="textPassword"
		    android:hint="@string/register_password_hint"     
		    android:layout_below="@id/pwd_txv"
		    android:scrollHorizontally="true"/>

		<CheckBox
			android:id="@+id/show_password"
			android:layout_width="wrap_content"
			android:layout_height="36dip"
			android:layout_marginLeft="20dip"
			android:layout_marginTop="6dip"
			android:layout_below="@id/register_pwd_edt"
			android:text="@string/show_password" 
			android:textColor="#000000"
		/>		
		
	        <RadioGroup
	        android:id="@+id/sex_rg"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_below="@id/register_pwd_edt"
	        android:layout_toRightOf="@id/show_password">
	        
		        <RadioButton
		        android:id="@+id/sex_man"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/user_sex_man"
		        android:textColor="#000000"
		        android:layout_marginLeft="10dip"
		        android:checked="true"
		        />
		        <RadioButton
		        android:id="@+id/sex_woman"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/user_sex_woman"
		        android:textColor="#000000"
		        android:layout_marginLeft="30dip"
		        />
	        </RadioGroup>
	        
		 <TextView 
		    android:id="@+id/phonenumber_txv"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="20dip"
	        android:layout_marginRight="20dip"
	        android:layout_marginTop="10dip" 
	        android:textAppearance="@style/sns_big_username"
	        android:gravity="left"
	        android:hint="@string/register_phonenumber_hint"
	        android:layout_below="@id/sex_rg"
	        android:text="@string/phonenumber_txt">
	    </TextView>
		<TextView 
	        android:id="@+id/phonenumber_error_msg_txt"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="20dip"
	        android:layout_marginRight="20dip"
	        android:layout_marginTop="10dip"
	        android:textAppearance="@style/error_msg_style"
	        android:layout_below="@id/phonenumber_txv"
	        android:gravity="left"
	        android:visibility="gone">
	    </TextView>
	    <EditText
		    android:id="@+id/register_phonenumber_edt"
		    android:layout_width="280dip"         
		    android:layout_height="55dip" 
		    android:layout_marginLeft="20dip"
		    android:layout_marginRight="20dip"
		    android:layout_marginTop="10dip"               
		    android:capitalize="none"
		    android:singleLine="true"
		     android:layout_below="@id/phonenumber_error_msg_txt"
		    android:scrollHorizontally="true"/>
	    
		    <TextView 
	        android:id="@+id/username_error_msg_txt"
	        android:layout_width="200dip"
	        android:layout_height="54dip"
	        android:layout_marginLeft="20dip"
	        android:layout_marginTop="-10dip"
	        android:textAppearance="@style/error_msg_style"
	        android:gravity="left"
	        android:layout_below="@id/register_username_edt"
	        android:background="@drawable/bak_corpus_selector_bg"
	        android:visibility="gone"/>
		    
		    
		    <TextView 
	        android:id="@+id/nickname_error_msg_txt"
	        android:layout_width="200dip"
	        android:layout_height="54dip"
	        android:layout_marginLeft="20dip"
	        android:layout_marginRight="20dip"
	        android:layout_marginTop="-10dip"
	        android:textAppearance="@style/error_msg_style"
	        android:gravity="left"
			android:layout_below="@id/register_nickname_edt"
	        android:background="@drawable/bak_corpus_selector_bg"
	        android:visibility="gone"/>
		    
		    <TextView 
	        android:id="@+id/pwd_error_msg_txt"
	        android:layout_width="200dip"
	        android:layout_height="54dip"
	        android:layout_marginLeft="20dip"
	        android:layout_marginRight="20dip"
	        android:layout_marginTop="-10dip"
	        android:textAppearance="@style/error_msg_style"
	        android:gravity="left"
	        android:layout_below="@id/register_pwd_edt"
	        android:background="@drawable/bak_corpus_selector_bg"
	        android:visibility="gone"/>
		    
		<!-- verify begin-->
	    <TextView 
	        android:id="@+id/verify_txv"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="20dip"
	        android:layout_marginRight="20dip"
	        android:layout_marginTop="10dip" 
	        android:textAppearance="@style/sns_big_username"
	        android:gravity="left"
	        android:text="@string/verify_txt">
	    </TextView>
		<TextView 
	        android:id="@+id/verify_error_msg_txt"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="20dip"
	        android:layout_marginRight="20dip"
	        android:layout_marginTop="10dip"
	        android:textAppearance="@style/error_msg_style"
	        android:gravity="left"
	        android:visibility="gone">
	    </TextView>
	    <EditText
		    android:id="@+id/register_verify_edt"
		    android:layout_width="280dip"         
		    android:layout_height="55dip" 
		    android:layout_marginLeft="20dip"
		    android:layout_marginRight="20dip"
		    android:layout_marginTop="10dip"               
		    android:capitalize="none"
		    android:singleLine="true"
		    android:scrollHorizontally="true"/>
		
	    </RelativeLayout>         
    </ScrollView>  
		    <RelativeLayout
		        android:layout_width="fill_parent"
		        android:layout_height="46dip"
		        android:layout_marginTop="30dip"
		        android:layout_marginLeft="20dip"
		        android:layout_marginRight="20dip"
		        android:layout_alignParentBottom="true">
		        <Button  android:id="@+id/register_ok_btn"
			        android:text="@string/label_ok"
			        android:layout_width="110dip"
			        android:layout_height="48dip"
			        android:focusable="true"  
			        android:focusableInTouchMode="true"
  			        android:layout_alignParentLeft="true"
			        android:layout_centerVertical="true"
			        android:textSize="16sp"/>    
			        
		        <Button  android:id="@+id/register_cancel_btn"
			        android:text="@string/label_cancel"
			        android:layout_width="110dip"
			        android:layout_height="48dip"
			        android:focusable="true"  
			        android:focusableInTouchMode="true"
			        android:layout_alignParentRight="true"
			        android:layout_centerVertical="true"
			        android:textSize="16sp"/> 
		    </RelativeLayout>
    <ListView
         android:id="@+id/register_mail_content"    
         android:layout_width="280dip"
         android:layout_height="wrap_content"
         android:layout_marginLeft="20dip"
         android:layout_marginRight="20dip"
         android:layout_marginTop="90dip"
         android:background="#fff7e7"
	     android:scrollbars="none"
	     android:visibility="gone" /> 
</RelativeLayout>
