<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/QuickContactListItemStyle" >

    <ImageView
        android:id="@+id/send_message"
        style="@style/list_item_icon"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_text_holo_light" />

    <View
        android:id="@+id/span_icon"
        android:layout_width="2px"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/send_message"
        android:background="@drawable/widget_line" />

    <TextView
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@id/span_icon"
        android:background="?attr/buttonSelectableBackground"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/default_text_padding_left"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>