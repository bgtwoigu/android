<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/stream_item_content_padding"
    android:paddingRight="@dimen/stream_item_content_padding"
    android:paddingTop="@dimen/stream_row_padding_vertical" >

    <TextView
        android:id="@+id/qiupu_stream_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@drawable/btn_plusone_normal_bg"
        android:drawableLeft="@drawable/comment_icon_small"
        android:drawablePadding="2dip"
        android:gravity="center"
        android:paddingLeft="@dimen/default_text_padding_left"
        android:paddingRight="@dimen/default_text_padding_right"
        android:minHeight="@dimen/default_clicking_area_min_height"
        android:minWidth="@dimen/default_clicking_area_min_width"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/stream_like_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@+id/qiupu_stream_comments"
        android:drawableLeft="@drawable/ic_like"
        android:drawablePadding="2dip"
        android:gravity="center"
        android:linksClickable="false"
        android:paddingLeft="@dimen/default_text_padding_left"
        android:paddingRight="@dimen/default_text_padding_right"
        android:minHeight="@dimen/default_clicking_area_min_height"
        android:minWidth="@dimen/default_clicking_area_min_width"
        android:background="@drawable/btn_plusone_normal_bg"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12sp" />
