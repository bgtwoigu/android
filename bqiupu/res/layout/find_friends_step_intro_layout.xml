<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/find_contact_guide_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="108.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="48.0dip"
                android:text="@string/find_friends_intro_header"
                android:textSize="18.0sp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="176.0dip"
                android:cropToPadding="true"
                android:paddingBottom="8.0dip"
                android:paddingTop="8.0dip"
                android:scaleType="center"
                android:src="@drawable/contact_icon" />

            <Button
                android:id="@+id/find_friends_intro_button"
                android:layout_width="wrap_content"
                android:layout_height="40.0dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="4.0dip"
                android:layout_marginTop="4.0dip"
                android:background="@color/link_text_color"
                android:clickable="true"
                android:gravity="center"
                android:minWidth="80dp"
                android:text="@string/find_friends"
                android:textColor="@color/white"
                android:textSize="14.0sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/find_friends_intro_footer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/bpc_comments_bg"
            android:clickable="true"
            android:gravity="bottom|center"
            android:minHeight="108.0dip"
            android:orientation="vertical"
            android:paddingBottom="24.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:paddingTop="24.0dip" >

            <TextView
                android:id="@+id/find_friends_intro_footer_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="40.0dip"
                android:text="@string/find_friends_intro_continuous_footer"
                android:textColor="@color/quick_list_bg"
                android:textSize="14.0sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="18.0dip"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:paddingTop="2.0dip"
                android:textColor="@color/link_text_color"
                android:textSize="14.0sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/find_friends_intro_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            android:minHeight="40.0dip"
            android:minWidth="48.0dip"
            android:paddingTop="2.0dip"
            android:text="@string/find_friends_intro_skip"
            android:textColor="@color/link_text_color"
            android:textSize="14.0sp" />
    </RelativeLayout>

</LinearLayout>