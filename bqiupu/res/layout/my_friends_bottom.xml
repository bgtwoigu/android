<?xml version="1.0" encoding="utf-8"?>
<com.borqs.common.view.TabBottomView xmlns:android="http://schemas.android.com/apk/res/android"
      style="@style/bottom_view_style">
	  
	<LinearLayout   
		    android:id="@+id/titlebar_container"
		    android:layout_width="fill_parent" 
		    android:layout_height="@dimen/bottom_height"
		    android:orientation="horizontal">
	            
	     <TextView
	            android:id="@+id/bottom_shortcut_circle"
	            style="@style/bottom_text_view"
	            android:text="@string/user_circles"
	            android:drawableTop="@drawable/bottom_icon_circle"/>
	  
	     <TextView 
	            android:id="@+id/bottom_shortcut_following"
	            style="@style/bottom_text_view"
	            android:text="@string/title_people"
	            android:drawableTop="@drawable/bottom_icon_friends"/>
	  
         <TextView
                android:id="@+id/bottom_shortcut_bilateral"
                style="@style/bottom_text_view"
                android:text="@string/common_know"
                android:textColor="@color/facebook_backgroud"
                android:drawableTop="@drawable/bottom_icon_mayknow"
                android:visibility="gone"/>

         </LinearLayout>
      
</com.borqs.common.view.TabBottomView>
    
