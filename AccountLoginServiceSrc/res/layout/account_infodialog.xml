<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/acl_backgroud"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/acl_tvInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal"
        android:paddingLeft="@dimen/acl_layout_padding_left"
        android:paddingRight="@dimen/acl_layout_padding_right"
        android:layout_marginTop="20dip"
        android:text="@string/acl_account_already_login"
        android:textColor="@color/acl_black" />

    <Button
        android:id="@+id/acl_btnOK"
        android:layout_width="@dimen/acl_bottom_button_width"
        android:layout_height="@dimen/acl_bottom_button_height"
        android:layout_gravity="center|center_horizontal"
        android:layout_margin="10dip"
        android:text="@string/acl_ok" />

</LinearLayout>